{
  "name": "client",
  "version": "1.0.0",
  "description": "Table reservation system API",
  "license": "MIT",
  "author": "Tuan Kiet Nguyen",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "devhttps": "vite --config vite-https.config.ts",
    "build": "tsc && vite build",
    "deploy": "rm -rf ../server/public && mv build ../server/public",
    "deploy-win": "deploy.bat",
    "upgrade-all": "ncu -u && yarn install",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "format": "prettier --write .",
    "upgrade-dep": "ncu -u && yarn install"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^7.12.0",
    "@typescript-eslint/parser": "^7.12.0",
    "@vitejs/plugin-basic-ssl": "^1.1.0",
    "@vitejs/plugin-react-swc": "^3.7.0",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.7",
    "typescript": "^5.4.5",
    "vite": "^5.2.12",
    "vite-plugin-svgr": "^4.2.0"
  }
}
