{
	"name": "server",
	"version": "1.0.0",
	"description": "Table reservation system API",
	"license": "MIT",
	"author": "Tuan Kiet Nguyen",
	"type": "module",
	"main": "index.js",
	"bin": "./bin/www.https.js",
	"scripts": {
		"dev": "NODE_ENV=DEV && nodemon bin/www.http.js",
		"devhttps": "NODE_ENV=DEV && nodemon bin/www.https.js",
		"start": "NODE_ENV=PRODUCTION && node bin/www.http.js",
		"test": "yarn test:unit && yarn test:api",
		"test:api": "NODE_ENV=TEST && jest --silent --testPathPattern='tests/v\\d+/api' --detectOpenHandles --forceExit",
		"test:unit": "NODE_ENV=TEST && jest --silent --testPathPattern='tests/v\\d+/unit' --detectOpenHandles --forceExit",
		"upgrade-dep": "ncu -u && yarn install"
	},
	"dependencies": {
		"axios": "^1.7.2",
		"bcryptjs": "^2.4.3",
		"body-parser": "^1.20.2",
		"compression": "^1.7.4",
		"connect-mongodb-session": "^5.0.0",
		"cookie-parser": "^1.4.6",
		"cors": "^2.8.5",
		"dayjs": "^1.11.11",
		"dotenv": "^16.4.5",
		"express": "^4.19.2",
		"express-session": "^1.18.0",
		"helmet": "^7.1.0",
		"jsonwebtoken": "^9.0.2",
		"lodash": "^4.17.21",
		"mongodb-memory-server": "^9.3.0",
		"mongoose": "^8.4.1",
		"morgan": "^1.10.0",
		"node-mailer": "^0.1.1",
		"passport": "^0.7.0",
		"passport-local": "^1.0.0"
	},
	"devDependencies": {
		"@babel/core": "^7.24.6",
		"@babel/preset-env": "^7.24.6",
		"@types/bcryptjs": "^2.4.6",
		"@types/compression": "^1.7.5",
		"@types/cookie-parser": "^1.4.7",
		"@types/cors": "^2.8.17",
		"@types/express": "^4.17.21",
		"@types/express-session": "^1.18.0",
		"@types/jest": "^29.5.12",
		"@types/locale": "^0.1.4",
		"@types/lodash": "^4.17.4",
		"@types/morgan": "^1.9.9",
		"@types/nodemailer": "^6.4.15",
		"@types/passport": "^1.0.16",
		"@types/supertest": "^6.0.2",
		"babel-plugin-transform-import-meta": "^2.2.1",
		"jest": "^29.7.0",
		"nodemon": "^3.1.3",
		"supertest": "^7.0.0"
	},
	"packageManager": "yarn@4.2.2",
	"engines": {
		"node": ">=20.4.0"
	}
}
